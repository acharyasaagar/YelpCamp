<% include partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!!!</h1>
            <p class="lead">View our hand-picked campgrounds from all over the world.</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-primary btn-lg">Add New Campground</a>
            </p>  
        </div>  
    </header>
    <div class="row" >
        <% camps.forEach((camp) => {  %>
            <div class="col-md-3 col-sm-6">
                <div class="text-center img-thumbnail">
                    <img class="img-fluid" src="<%= camp.image %>" alt="Camp Image" style="overflow:hidden">
                    <div class="caption">
                        <h6><%= camp.name %></h6>
                    </div>
                </div>
            </div>
        <%  }) %>
        </div>  
    </div>
</div>


<% include partials/footer %>