<% include partials/header %>

<div class="container">
<h3 class="text-center mb-5">Create a new campground</h3>
  <div class="row">
    <div class="col">
        <form action="/campgrounds" method="POST">
            <div class="form-group w-75 mx-auto">
                <input class="form-control p-2" type="text" name="name" placeholder="Enter name of campground...">
            </div>
            <div class="form-group w-75 mx-auto">
                <input  class="form-control p-2" type="text" name="image" placeholder="Enter image URL">
            </div>
            <div class="form-group w-75 mx-auto">
                <textarea  class="form-control p-2" type="textarea" rows="4" name="description" placeholder="Description"></textarea>
            </div>
            <button class="btn btn-primary btn-block w-75 mx-auto" type="submit">Add new Camp</button>
        </form>
    </div>
  </div>
</div>


